{% extends "base.html.twig" %}

{% block title %}{{ dynamic }} un departement{% endblock %}

{% block body %}

    <div class="mt-5" style="max-width:500px; margin: auto">

        <a href="{{ path('departement_show') }}"><span class="badge bg-danger">Annuler</span></a>
        <h3 class="my-3">{{ dynamic }} un departement</h3>

        <div class="form-group">
            {{ form_start(form) }}

            {# DEPARTEMENT NAME #}
            {{ form_widget(form.name, {
                'attr':{'class':'form-control' }
            }) }}
            <p class="text-danger" style="height:25px">
                <small>{{ err_name }}</small>
            </p>

            {# DEPARTEMENT DOMAIN #}
            {{ form_widget(form.domaine, {
                'attr':{'class':'form-select' }
            }) }}
            <p class="text-danger" style="height:25px">
                <small>{{ err_domain }}</small>
            </p>

            {{ form_widget(form.submit, {'label':dynamic, 'attr':{'class':'btn btn-danger'}}) }}

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}